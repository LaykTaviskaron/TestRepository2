@model DailyViewModel
@{
    ViewData["Title"] = "All meetings for the day";
}

<div class="table-responsive">
    <a href="@Url.Action("Create", "Meeting")" class="btn btn-primary">Create</a>
    @if (!Model.Meetings.Any())
    {
        <p>Nothing scheduled for this day. Get rest!</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>StartDate</th>
                    <th>EndDate</th>
                    <th>View</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var meeting in Model.Meetings)
                {
                    <tr>
                        <td>@meeting.Name</td>
                        <td>@meeting.StartDate</td>
                        <td>@meeting.EndDate</td>
                        <td class="text-center"><a href="@Url.Action("Details", "Meeting", new { id = meeting.Id })" class="btn btn-primary">View</a></td>
                        <td class="text-center"><a href="@Url.Action("Edit", "Meeting", new { id = meeting.Id })" class="btn btn-primary">Edit</a></td>
                        <td class="text-center"><a href="@Url.Action("Delete", "Meeting", new { id = meeting.Id })" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

